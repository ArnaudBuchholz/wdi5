{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "test new browser",
            "type": "node",
            "request": "launch",
            "args": [
                "./test/test-browser.js"
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
        },
        {
            "name": "test browserstack android",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "args": [
                "./test/wdio-bs-android.conf.js"
            ],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "autoAttachChildProcesses": true,
            "console": "internalConsole"
        },
        {
            "name": "run test:electron",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/wdio-electron.conf.js",
                "--spec",
                "plugin.test.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "autoAttachChildProcesses": true
        },
        {
            "name": "run test:android",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/wdio-android.conf.js",
                "--spec",
                "plugin.test.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "autoAttachChildProcesses": true
        },
        {
            "name": "test:browser w static file",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/wdio-browser.conf.js",
                "--spec",
                "basic.test.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "autoAttachChildProcesses": true
        },
        {
            "name": "test:browser w current file",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/wdio-browser.conf.js",
                "--spec",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "autoAttachChildProcesses": true
        },
        {
            "name": "watch selected spec:browser",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/wdio.conf.js",
                "${workspaceFolder}/test/wdio-browser.conf.js",
                "--watch",
                "--spec",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "program": "${workspaceRoot}/node_modules/@wdio/cli/bin/wdio.js",
            "console": "integratedTerminal"
        },
        {
            "name": "run test:ios",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "request": "launch",
            "args": [
                "${workspaceFolder}/test/wdio-ios.conf.js",
                "--spec",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "autoAttachChildProcesses": true
        }
    ]
}
